<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forrestfan.beam.DepressionGroup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msgContainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Hey There!"
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Hi"
                android:background="@drawable/message_bubble"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="How are u doing today?"
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Hi"
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="not the best today"
                android:background="@drawable/message_bubble"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="What happenede u can talk with us"
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Well its a really long story and idk if u guys want to know"
                android:background="@drawable/message_bubble"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Of course we want to know "
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="We are here to hear you out"
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="well my girl of 3 years just dumbed me today"
                android:background="@drawable/message_bubble"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Lorem ipsum."
                android:background="@drawable/message_bubble"
                android:backgroundTint="#ddd"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/border_top">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_insert_photo_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="8dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:background="@drawable/border"
            android:hint="Type a message"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_send_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
</RelativeLayout>
